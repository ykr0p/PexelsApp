<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme without ActionBar -->
    <style name="Theme.PexelsApp" parent="android:Theme.Material.Light.NoActionBar" />
    
    <!-- Fullscreen theme for maximum immersion -->
    <style name="Theme.PexelsApp.Fullscreen" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>